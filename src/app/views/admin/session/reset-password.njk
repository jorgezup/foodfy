{% extends "./layout-session.njk" %}

{% block content %}

	<section class="card-login">

		<h2>Nova senha</h2>

		<form action="/users/reset-password" method="POST">
			<div class="fields">
				<div>
					<label>Email</label>
					<input 
						type="email" 
						name="email" 
						value="{{user.email}}"
						placeholder="Digite seu e-mail"
						onblur="Validate.apply(this,'isEmail')"
					>
				</div>

				<div>
					<label>Nova Senha</label>
					<input type="password" name="password" placeholder="Digite sua nova senha">
				</div>

				<div>
					<label>Repetir Senha</label>
					<input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
				</div>

				<input type="hidden" name="token" value="{{token}}">
			</div>

		

			<div class="botoes login">
				<button type="submit" class="button salvar">Nova senha</button>
			</div>
		</form>

	</section>
</div>
{% endblock %}

{% block script %}
<script src="/scripts-admin.js"></script>
{% endblock %}