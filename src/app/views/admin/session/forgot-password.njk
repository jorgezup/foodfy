{% extends "./layout-session.njk" %}

{% block content %}

	<section class="card-login">

		<h2>Esqueceu a senha ?</h2>

		<form method="POST" action="/users/forgot-password">
			<div class="fields">
				<div>
					<label>Email</label>
					<input 
						type="email" 
						name="email" 
						value="{{user.email}}"
						placeholder="Digite seu e-mail para recuperar a senha"
						onblur="Validate.apply(this,'isEmail')"
					>
				</div>
			</div>
			<div class="botoes login">
				<button type="submit" class="button salvar">Recuperar</button>
			</div>
		</form>

	</section>
</div>
{% endblock %}

{% block script %}
<script src="/scripts-admin.js"></script>
{% endblock %}