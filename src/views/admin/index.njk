{% extends "admin/layout-admin.njk" %}

{% block content %}
    <section class="cabecalho">
        <h2>Gerenciar receitas</h2>

        <div class="botoes">
            <button class="button salvar">
                <a  href="/admin/receitas/create">Nova Receita</a>
            </button>
        </div>
    </section>

    <div class="grid">
        {% for receita in receitas %}
            <div class="container-grid">
                <img src={{receita.imagem_receita}} alt="Imagem Receita">
                <div class="informacoes-receita">
                    <p>{{receita.title}}</p>
                    <small>{{receita.author}}</small>
                    <a href="/admin/receitas/{{receita.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}